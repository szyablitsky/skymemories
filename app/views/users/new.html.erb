<% content_for(:title, 'Регистрация') %>
<h1>Регистрация</h1>

<%= form_for(@user) do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "ошибка") %>
        не позволяют зарегистрировать новую учетную запись:
      </h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, 'Имя пользователя' %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email, 'Адрес электронной почты' %><br>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label :password, 'Пароль' %><br>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'Ещё раз пароль' %><br>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit "Создать учетную запись", class: "btn btn-primary" %>
  </div>

<% end %>
