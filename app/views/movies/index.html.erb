<% provide :title, 'Фильмы' %>

<% content_for :banner do %>
  <p class="lead"><i>Наши фильмы</i></p>
<% end %>

<h1>Фильмы</h1>

<% sort_and_add_locales(@locales).each do |locale, movies| %>
  <section class="locale clearfix">
    <header>
      <%= locale_name(locale) %>
      <%= link_to "Добавить", new_movie_path(locale: locale) %>
    </header>
    
    <% if movies %>
      <ul class="movies">
        <%= render movies %>
      </ul>
    <% end %>
  </section>
<% end %>
