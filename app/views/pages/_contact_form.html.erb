<%= form_tag "/messages", role: "form" do %>
  <div class="form-group">
    <label for="message_name"><%= t(".form_name") %></label>
    <input class="form-control" id="message_name" name="message[name]" required>
  </div>
  <div class="form-group">
    <label for="message_email"><%= t(".form_email") %></label>
    <input type="email" class="form-control" id="message_email" name="message[email]" required>
  </div>
  <div class="form-group">
    <label for="message_message"><%= t(".form_msg") %></label>
    <textarea type="text" class="form-control" id="message_message" name="message[message]" rows="5" required></textarea>
  </div>
  <%= submit_tag t(".form_submit"), class: "btn btn-default" %>
<% end %>